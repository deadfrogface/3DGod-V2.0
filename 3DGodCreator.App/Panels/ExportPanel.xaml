<UserControl x:Class="ThreeDGodCreator.App.Panels.ExportPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="8">
            <TextBlock Text="Export" FontSize="16" Foreground="White" Margin="0,0,0,8"/>
            <TextBlock Text="Dateiname:" Foreground="Gray" Margin="0,0,0,2"/>
            <TextBox x:Name="TxtFilename" Text="my_character" Padding="8,4" Margin="0,0,0,8" Foreground="White" Background="#333"/>
            <Button Content="Preset speichern" Padding="12,6" Margin="0,0,0,4" Click="BtnSavePreset_Click"/>
            <Button Content="FBX exportieren" Padding="12,6" Margin="0,0,0,8" Click="BtnExport_Click"/>
            <TextBlock Text="Unreal-Zielordner:" Foreground="Gray" Margin="0,0,0,2"/>
            <Grid Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TxtUnrealPath" Padding="8,4" Margin="0,0,8,0" Foreground="White" Background="#333"/>
                <Button Grid.Column="1" Content="Ordner wÃ¤hlen" Padding="12,6" Click="BtnBrowseUnreal_Click"/>
            </Grid>
            <Button Content="Exportiere nach Unreal" Padding="12,6" Margin="0,0,0,8" Click="BtnExportToUnreal_Click"/>
            <TextBlock Text="Export-Log:" Foreground="Gray" Margin="0,0,0,2"/>
            <TextBox x:Name="TxtLog" IsReadOnly="True" MinHeight="100" Padding="8" Margin="0,0,0,4"
                     Foreground="#ccc" Background="#252526" FontFamily="Consolas" FontSize="11"
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
