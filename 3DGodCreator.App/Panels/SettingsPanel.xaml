<UserControl x:Class="ThreeDGodCreator.App.Panels.SettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="8">
        <TextBlock Text="Einstellungen" FontSize="16" Foreground="White" Margin="0,0,0,8"/>
        <TextBlock Text="Blender-Pfad" Foreground="Gray" Margin="0,0,0,2"/>
        <Grid Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TxtBlenderPath" Padding="8,4" Margin="0,0,8,0" Foreground="White" Background="#333"/>
            <Button Grid.Column="1" Content="..." Padding="8,4" Click="BtnBrowseBlender_Click"/>
        </Grid>
        <TextBlock Text="Theme" Foreground="Gray" Margin="0,0,0,2"/>
        <ComboBox x:Name="CmbTheme" Margin="0,0,0,8" SelectionChanged="CmbTheme_SelectionChanged">
            <ComboBoxItem Content="Dark"/>
            <ComboBoxItem Content="Light"/>
            <ComboBoxItem Content="Cyberpunk"/>
        </ComboBox>
        <CheckBox x:Name="ChkNsfw" Content="NSFW-Modus aktivieren" Foreground="White" Margin="0,0,0,4" Checked="ChkNsfw_Changed" Unchecked="ChkNsfw_Changed"/>
        <CheckBox x:Name="ChkController" Content="Controller-Unterst체tzung" Foreground="White" Margin="0,0,0,8" Checked="ChkController_Changed" Unchecked="ChkController_Changed"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <Button x:Name="BtnTestBlender" Content="Blender testen" Padding="12,6" Margin="0,0,8,0" Click="BtnTestBlender_Click" ToolTip="Pr체ft ob Blender gestartet werden kann"/>
            <Button x:Name="BtnDiagnostics" Content="System-Check" Padding="12,6" Click="BtnDiagnostics_Click" ToolTip="Vollst채ndige Projekt-Pr체fung"/>
        </StackPanel>
    </StackPanel>
</UserControl>
