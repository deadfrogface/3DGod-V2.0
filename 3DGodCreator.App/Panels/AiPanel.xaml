<UserControl x:Class="ThreeDGodCreator.App.Panels.AiPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="8">
        <TextBlock Text="KI-Modellerzeugung" FontSize="16" Foreground="White" Margin="0,0,0,8"/>
        <TextBlock Text="Text- oder bildbasierte 3D-Erzeugung (Phase 2: ONNX/HTTP)" Foreground="Gray" Margin="0,0,0,8" TextWrapping="Wrap"/>
        <TextBox x:Name="TxtPrompt" Padding="8,4" Margin="0,0,0,8" Foreground="White" Background="#333"
                 Text="z.B. 'muscular elf warrior'"/>
        <Button Content="Bild laden" Padding="12,6" Margin="0,0,0,4" Click="BtnLoadImage_Click"/>
        <TextBlock x:Name="LblImage" Text="Kein Bild ausgewählt" Foreground="Gray" Margin="0,0,0,8"/>
        <Button Content="Erzeuge vollständige Person" Padding="12,6" Margin="0,0,0,4" Click="BtnGeneratePerson_Click"/>
        <Button Content="Erzeuge Asset (Kleidung)" Padding="12,6" Margin="0,0,0,4" Click="BtnGenerateAsset_Click"/>
        <TextBlock x:Name="StatusLabel" Foreground="Gray" Margin="0,8,0,0" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
