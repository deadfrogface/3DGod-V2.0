<Window x:Class="ThreeDGodCreator.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D God Creator" Height="900" Width="1600"
        Background="#1e1e1e" Focusable="True" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <TabControl x:Name="Tabs" Grid.Row="0" Grid.Column="0" Background="#2d2d2d" BorderThickness="0">
            <TabItem Header="Form">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ContentControl x:Name="FormPanel"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Sculpt">
                <ContentControl x:Name="SculptPanel"/>
            </TabItem>
            <TabItem Header="NSFW">
                <ContentControl x:Name="NsfwPanel"/>
            </TabItem>
            <TabItem Header="Kleidung">
                <ContentControl x:Name="ClothingPanel"/>
            </TabItem>
            <TabItem Header="Physik">
                <ContentControl x:Name="PhysicsPanel"/>
            </TabItem>
            <TabItem Header="Material">
                <ContentControl x:Name="MaterialPanel"/>
            </TabItem>
            <TabItem Header="Presets">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ContentControl x:Name="PresetPanel"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Rigging">
                <ContentControl x:Name="RiggingPanel"/>
            </TabItem>
            <TabItem Header="Export">
                <ContentControl x:Name="ExportPanel"/>
            </TabItem>
            <TabItem Header="Einstellungen">
                <ContentControl x:Name="SettingsPanel"/>
            </TabItem>
            <TabItem Header="KI">
                <ContentControl x:Name="AiPanel"/>
            </TabItem>
        </TabControl>

        <GridSplitter Grid.Row="0" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#404040"/>

        <Border Grid.Row="0" Grid.Column="2" Background="#252526" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="3D Vorschau" FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                <TextBlock Grid.Row="1" Text="Rechtsklick ziehen = Drehen · Shift+Rechtsklick = Verschieben · Mausrad = Zoom" 
                           Foreground="#888" FontSize="11" Margin="0,0,0,6"/>
                <Border Grid.Row="2" x:Name="ViewportHost" Background="#1a1a1a" MinHeight="300">
                    <Image x:Name="PreviewImage" Stretch="Uniform"/>
                </Border>
            </Grid>
        </Border>

        <Border x:Name="DebugPanelHost" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="#252526" Visibility="Collapsed"
                MaxHeight="300" MinHeight="150">
            <ContentControl x:Name="DebugConsoleHost"/>
        </Border>
    </Grid>
</Window>
