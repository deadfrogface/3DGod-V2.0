<Window x:Class="ThreeDGodCreator.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D God Creator" Height="900" Width="1600"
        Background="#1e1e1e">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <TabControl x:Name="Tabs" Grid.Column="0" Background="#2d2d2d" BorderThickness="0">
            <TabItem Header="Form">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ContentControl x:Name="FormPanel"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Sculpt">
                <ContentControl x:Name="SculptPanel"/>
            </TabItem>
            <TabItem Header="NSFW">
                <ContentControl x:Name="NsfwPanel"/>
            </TabItem>
            <TabItem Header="Kleidung">
                <ContentControl x:Name="ClothingPanel"/>
            </TabItem>
            <TabItem Header="Rigging">
                <ContentControl x:Name="RiggingPanel"/>
            </TabItem>
            <TabItem Header="Export">
                <ContentControl x:Name="ExportPanel"/>
            </TabItem>
            <TabItem Header="Einstellungen">
                <ContentControl x:Name="SettingsPanel"/>
            </TabItem>
            <TabItem Header="KI">
                <ContentControl x:Name="AiPanel"/>
            </TabItem>
        </TabControl>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#404040"/>

        <Border Grid.Column="2" Background="#252526" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="3D Vorschau" FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <Border Grid.Row="1" x:Name="ViewportHost" Background="#1a1a1a" MinHeight="300">
                    <Image x:Name="PreviewImage" Stretch="Uniform"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
