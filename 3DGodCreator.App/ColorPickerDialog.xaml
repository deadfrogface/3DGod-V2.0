<Window x:Class="ThreeDGodCreator.App.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Farbe wÃ¤hlen" Height="120" Width="300" WindowStartupLocation="CenterOwner"
        Background="#2d2d2d" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Hex:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="TxtHex" Width="100" Padding="6,4" Margin="0,0,8,0"
                     Foreground="White" Background="#333"/>
            <Border x:Name="ColorPreview" Width="40" Height="24" Background="#cccccc" CornerRadius="2"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Padding="8,4" Margin="0,0,8,0" IsDefault="True" Click="BtnOk_Click"/>
            <Button Content="Abbrechen" Width="80" Padding="8,4" IsCancel="True" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
